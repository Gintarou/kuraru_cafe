        <li><%= link_to "HOME", root_path %></li>
        <li><%= link_to "ABOUT", about_path %></li>
        <li><%= link_to "MENU", menus_path %></li>
        <li><%= link_to "RENTAL", rental_path %></li>
        <li><%= link_to "EVENT", rental_path %></li>
