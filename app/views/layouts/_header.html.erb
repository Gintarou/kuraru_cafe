        <ul>
          <li><%= link_to "HOME", root_path, class:"ham_link" %></li>
          <li><%= link_to "ABOUT", about_path, class:"ham_link" %></li>
          <li><%= link_to "MENU", menus_path, class:"ham_link" %></li>
